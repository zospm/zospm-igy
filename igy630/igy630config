#!/bin/sh

runivp() {
#set -x
	tempprefix="${ZOSPM_TGT_HLQ}IGY630T"
	tempds=`mvstmp ${tempprefix}`
	dtouch -tseq $tempds

	jobcard="//IGYWIVP1   JOB ${ZOSPM_JOBOPTS},${ZOSPM_JOBPARMS}"
	decho "$jobcard" ${tempds}
	decho -a "//*
//PROCLIB JCLLIB ORDER=${ZOSPM_TGT_HLQ}IGY630.SIGYPROC
//RUNIVP EXEC IGYWCLG,REGION=0M,
//  LNGPRFX=${ZOSPM_TGT_HLQ}IGY630,
//  LIBPRFX=${ZOSPM_CEEHLQ},
//  PARM.LKED='LIST,XREF,LET,MAP',
//  PARM.COBOL='RENT',
//  PARM.GO=''
//COBOL.SYSIN DD DISP=SHR,
//  DSN=${ZOSPM_TGT_HLQ}IGY630.SIGYSAMP(IGYIVP)
//GO.SYSOUT DD SYSOUT=*
" ${tempds}

	job=`jsub $tempds`
	while true ; do
		output=`jls ${job}`
		if [ $? -eq 0 ]; then
			if [ "${output}" != '' ]; then 
				status=`echo ${output} | awk '{ print $4; }'`
				if [ "${status}" != 'AC' ]; then
					break
				fi
			fi
		fi
		sleep 1
	done
	rc=`echo ${output} | awk '{ print $5; }'`
	if [ "${rc}" != '0000' ]; then
		echo "IVP failed with RC:${rc}. Temporary JCL is in ${tempds}. Job output is in ${job}"
		exit 16
	fi

	drm $tempds
	exit 0
}

. zospmsetenv

out=`runivp`
rc=$?
if [ $rc -gt 0 ]; then
	echo "IVP failed. Installation aborted"
	echo "$out"
	exit $rc
fi

